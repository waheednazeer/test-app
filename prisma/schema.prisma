//env("DATABASE_URL")
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  image       String?
  title       String
  price       Float
  category    String
  description String?
  createdDate DateTime @default(now())
}

model User {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  username String
  password String
  email    String     @unique
  address  String?
}

